#Constructor Method ໃນ Python
class Employee:
    #class variables
    _minSarary = 15000  #protected variable
    _maxSarary = 2000000  #private variable
    _company = "ABC Company"  #public variable
    def __init__(self,name,sarary,department):  #ສ້າງmethod detail  //def ແມ່ນການປະກາດmethod
        self.__name = name  #ກຳນົດ attribute name
        self.__sarary = sarary #ກຳນົດ attribute sarary
        self.__department = department #ກຳນົດ attribute department
        #protected method
    def showData(self):#ສ້າງmethod showData
        print("Name = {}".format(self.__name))#ສະແດງ attribute name
        print("Salary = {}".format(self.__sarary))#ສະແດງ attribute sarary
        print("Department = {}".format (self.__department))#ສະແດງ attribute department

class Accounting(Employee):
    __departmentName = "Accounting"
    def __init__(self,name,sarary):
        super().__init__(name,sarary,self.__departmentName)
        super().showData()
class IT(Employee):
    __departmentName = "IT"
    def __init__(self,name,sarary):
        super().__init__(name,sarary,self.__departmentName)
        super().showData()
class Marketing(Employee):
    __departmentName = "Marketing"
    def __init__(self,name,sarary):
        super().__init__(name,sarary,self.__departmentName)
        super().showData()

account = Accounting("A",20000)
codind = IT("B",25000)
sell = Marketing("C",30000)
